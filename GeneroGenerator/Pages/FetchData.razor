@page "/fetchdata"

@using GeneroGenerator.Data
@using GeneroGenerator.BLL
@using GeneroGenerator.Entidades


@inject WeatherForecastService ForecastService


<style>
        .form-register th {
            font-size: 22px;
        }

        .form-register td {
            font-size: 20px;
        }

        .form-register a {
            font-size: 20px;
        }

</style>

<div class="form-register">
    <h1>Consulta de Generos</h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>GeneroId</th>
                <th>Nombre </th>
                <th>       </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item.GeneroId</td>
                    <td>@item.Nombre</td>
                    <td><a href="rGenero/@item.GeneroId">Editar</a>|<a href="">Eliminar</a></td>
                </tr>
            }


        </tbody>
    </table>
</div>
   

@code {

    public List<Generos> lista { get; set; }
    protected override async Task OnInitializedAsync()
    {
        try
        {
            RepositorioBase<Generos> db = new RepositorioBase<Generos>();
            lista = db.GetList(C=> true);
        }
        catch(Exception)
        {
            throw;
        }

    }


}
