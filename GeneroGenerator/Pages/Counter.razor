@page "/counter"

    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .form-register {
            width: 600px;
            background: #24303c;
            padding: 30px;
            margin: auto;
            margin-top: 100px;
            border-radius: 4px;
            font-family: 'calibri';
            color: white;
            box-shadow: 7px 13px 37px #000;
        }

        .form-register h4 {
                font-size: 22px;
                margin-bottom: 20px;
        }

        .controls {
            width: 100%;
            background: #24303c;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 16px;
            border: 1px solid #0EBA25;
            font-family: 'calibri';
            font-size: 18px;
        }

        .form-register .botons {
            width: 100%;
            background: #0EBA25;
            border: none;
            padding: 12px;
            color: white;
            margin: 16px 0;
            font-size: 26px;
        }

    </style>
        

    <div>
        
        <section class="form-register">
            <div>
                <h4>Registro de Generos</h4>

                <input class="controls" type="text" name="nombres" id="nombres-texbox" placeholder="Ingrese el Genero">
                <input class="botons" type="submit" value="Guardar">
            </div>
        </section>
    </div>


@*<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>*@

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
